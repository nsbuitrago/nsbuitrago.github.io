---
import Header from "../components/Header.astro";
// import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script is:inline src="https://kit.fontawesome.com/385ad6aab0.js" crossorigin="anonymous"></script>
    <title>{title}</title>
</head>
<body class="h-full w-full bg-light dark:bg-dark">
	<Header />
	<main>
		<slot />
	</main>
	<!-- <Footer /> -->
</body>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		@font-face {
			font-family: 'MajorMonoDisplayNSBRegular';
			src: url('/fonts/MajorMonoDisplayNSBRegular.woff') format('woff');
			font-weight: normal;
			font-style: normal;
		}

		@font-face {
			font-family: 'PPObjectSans-Regular';
			src: url('/fonts/PPObjectSans-Regular.otf') format('otf');
			font-weight: normal;
			font-style: normal;
		}

		@font-face {
			font-family: 'JetBrainsMono[wght]';
			src: url('/fonts/JetBrainsMono[wght].ttf') format('ttf');
			font-weight: normal;
			font-style: normal;
		}
	}
</style>
